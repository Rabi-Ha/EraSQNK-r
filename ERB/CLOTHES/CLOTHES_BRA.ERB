;-------------------------------------------------
;지시されたとおりの브래지어の플래그を설정するために使う
;-------------------------------------------------
@SETFLAG_BRA(ARGS:1, ARGS:2, ARGS:3, ARGS:4, ARGS:5, ARGS:6, ARGS:7, ARGS:8, ARGS:9, ARGS:10)
#FUNCTION
#DIM LCOUNT

LOCAL = 0
FOR LCOUNT, 1, 11
	ARGS = %ARGS:LCOUNT%
	SELECTCASE ARGS
	;谷間が綺麗に見える
	CASE "3/4컵", "３/４컵"
		SETBIT LOCAL, 0
		LOCAL |= SETFLAG_COMMON("가슴골노출")
	;유두がちょっと見える
	CASE "1/2컵", "１/２컵", "ハーフ컵"
		SETBIT LOCAL, 1
		LOCAL |= SETFLAG_COMMON("가슴골노출", "유두노출")
	;유두は隠れない
	CASE "1/4컵", "１/４컵", "토플리스브래지어"
		SETBIT LOCAL, 2
		LOCAL |= SETFLAG_COMMON("가슴골노출", "유두노출", "はだけ불가")
	;컵部分だけない
	CASE "オープン브래지어"
		SETBIT LOCAL, 3
		LOCAL |= SETFLAG_COMMON("가슴노출", "はだけ불가")
	;유두周辺の三角形しか隠していない
	CASE "마이크로"
		SETBIT LOCAL, 4
		LOCAL |= SETFLAG_COMMON("가슴골노출")
	CASE "탱크탑"
		SETBIT LOCAL, 5
	;おへそ辺りまで
	CASE "캐미솔", "キャミ"
		SETBIT LOCAL, 6
	;브래지어が隠れるぐらいの長さ
	CASE "ロング캐미솔", "ロングキャミ"
		SETBIT LOCAL, 7
		SETBIT LOCAL, 6
	;おへそが見えるように前面が開いている
	CASE "オープン캐미솔", "オープンキャミ"
		SETBIT LOCAL, 8
		SETBIT LOCAL, 6
	;布が巻かれているようなの
	CASE "民族的"
		SETBIT LOCAL, 9
		LOCAL |= SETFLAG_COMMON("가슴골노출")
	;쿠노이치の着てるのは鎖製ではないと信じたい
	CASE "홑옷", "かたびら"
		SETBIT LOCAL, 10
		LOCAL |= SETFLAG_COMMON("ずれ불가", "ズリ불가")
	;드라군着用
	CASE "앞치마"
		SETBIT LOCAL, 11
	CASE "튜브탑"
		SETBIT LOCAL, 12
	CASE "뷔스티에"
		SETBIT LOCAL, 13
	CASE "スポーツ브래지어", "スポーツ"
		SETBIT LOCAL, 14
	CASE "貝殻"
		SETBIT LOCAL, 15
		LOCAL |= SETFLAG_COMMON("ズリ불가", "가슴골노출")
	CASE "超Ｈ"
		SETBIT LOCAL, 16
	;オート브래지어
	CASE "大人しめ"
		LOCAL |= SETFLAG_COMMON("大人しめの色")
	CASE "청초"
		SIF RAND:3 == 0
			SETBIT LOCAL, 6
		SIF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("프릴")
		SIF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("실크")
		LOCAL |= SETFLAG_COMMON("大人しめの色")
	CASE "ちょっとＨ"
		IF RAND:3
			SETBIT LOCAL, 0
			LOCAL |= SETFLAG_COMMON("가슴골노출")
		ELSEIF RAND:2
			SETBIT LOCAL, 1
			LOCAL |= SETFLAG_COMMON("가슴골노출")
		ENDIF
		SIF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("프릴")
		SIF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("실크")
		SIF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("시스루")
		LOCAL |= SETFLAG_COMMON("Ｈめの色")
	CASE "Ｈ"
		IF RAND:5 == 0
			SETBIT LOCAL, 0
			LOCAL |= SETFLAG_COMMON("가슴골노출")
		ELSEIF RAND:4 == 0
			SETBIT LOCAL, 1
			LOCAL |= SETFLAG_COMMON("가슴골노출")
		ELSEIF RAND:3 == 0
			SETBIT LOCAL, 2
			LOCAL |= SETFLAG_COMMON("가슴골노출", "유두노출", "はだけ불가")
		ELSEIF RAND:2
			SETBIT LOCAL, 3
			LOCAL |= SETFLAG_COMMON("가슴노출", "はだけ불가")
		ELSE
			SETBIT LOCAL, 4
			LOCAL |= SETFLAG_COMMON("가슴골노출")
		ENDIF
		SIF RAND:5 == 0
			LOCAL |= SETFLAG_COMMON("실크")
		SIF RAND:5 == 0
			LOCAL |= SETFLAG_COMMON("레이스")
		SIF RAND:4 == 0
			LOCAL |= SETFLAG_COMMON("시스루")
		LOCAL |= SETFLAG_COMMON("Ｈめの色")
	CASEELSE
		SIF STRLENS(ARGS)
			LOCAL |= SETFLAG_COMMON(ARGS)
	ENDSELECT
	SIF STRLENS(ARGS:(LCOUNT + 1) ) == 0
		RETURNF LOCAL
NEXT
RETURNF LOCAL

;-------------------------------------------------
;ARGの브래지어が条件ARGS:1～5を満たすか確認する
;-------------------------------------------------
@CHECK_BRA(ARGS, ARG)
#FUNCTION
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:브래지어 == 0
	RETURNF 0

SELECTCASE ARGS
CASE "はだけ可"
	;既に노출している場合
	SIF SETFLAG_BRA("가슴노출")&EQUIP:ARG:브래지어
		RETURNF 0
	SIF SETFLAG_BRA("유두노출")&EQUIP:ARG:브래지어
		RETURNF 0
	SIF SETFLAG_BRA("はだけた")&EQUIP:ARG:브래지어
		RETURNF 0
	SIF SETFLAG_BRA("はだけ불가")&EQUIP:ARG:브래지어
		RETURNF 0
	RETURNF 1
CASE "유두노출"
	SIF SETFLAG_BRA("가슴노출")&EQUIP:ARG:브래지어
		RETURNF 1
	SIF SETFLAG_BRA("유두노출")&EQUIP:ARG:브래지어
		RETURNF 1
CASEELSE
	SIF (SETFLAG_BRA(ARGS)&EQUIP:ARG:브래지어) == SETFLAG_BRA(ARGS)
		RETURNF 1
ENDSELECT

RETURNF 0
